<div class="card custom-form">
  <div class="card-header">Edit Note</div>
  <div class="card-body">
    <%= form_with model: @note, local: true, method: :put do |f| %>
      <%= error_messages_for(@note) %>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          <%= f.text_field :title, class: 'form-control', maxlength: 30, value: @note.title %>
        </div>
        <div class="form-group">
          <label for="text">Text</label>
          <%= f.text_area :text, size: "60x12", class: 'form-control', maxlength: 1000, value: @note.text %>
        </div>
        <div class="form-group">
          <%= link_to "Cancel", notes_path, class: "btn btn-danger float-left", type: 'button'%>
          <%= f.submit "Edit", class: 'btn btn-primary float-right'%>
        </div>
      </form>
    <% end %>
  </div>
</div>