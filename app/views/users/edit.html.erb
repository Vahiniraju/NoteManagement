<div class="card custom-form">
  <div class="card-header">Edit Profile</div>
  <div class="card-body">
  <div class="form-width">
    <%= form_for(@user) do |f| %>
      <%= error_messages_for(@user) %>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name , class: "form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name , class: "form-control"%>
      </div>
      <%= f.label :mailable, class: "checkbox inline", value: @user.mailable do %>
        <%= f.check_box :mailable %>
        <span> I accept to receive emails</span>
      <% end %>
      <div class="form-group">
        <%= link_to "Cancel", notes_path, class: "btn btn-danger float-left", type: 'button'%>
        <%= f.submit "Edit", class: 'btn btn-primary float-right'%>
      </div>
    <% end %>
  </div>
</div>
</div>